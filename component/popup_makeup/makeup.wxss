/* component/popup_leave/leave.wxss */
.bg {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: black;
  opacity: 0.3;
  z-index: 998;
}

.card {
  height: 1030rpx;
  width: 670rpx;
  position: fixed;
  left: 40rpx;
  top: 157rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding-top: 40rpx;
  z-index: 999;
  overflow: hidden;
}

.userinfo-type {
  position: relative;
  padding: 0 40rpx;
  /* width: 590rpx; */
  height: 32rpx;
  color: #2655CF;
  display: flex;
}

.left {
  height: 100%;
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
}

.userinfo-type .left-line {
  width: 167rpx;
  height: 2rpx;
  background: #2655CF;
}

.userinfo-type .left::after {
  content: "\e679";
  font-family: 'cuIcon';
  font-size: 32rpx;
  flex: 1;
  margin-left: -8rpx;
}

.userinfo-type text {
  float: left;
  height: 32rpx;
  line-height: 32rpx;
  width: 200rpx;
  font-size: 32rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #2655CF;
}

.right {
  height: 100%;
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
}

.userinfo-type .right-line {
  width: 167rpx;
  height: 2rpx;
  background: #2655CF;
  margin-right: 4rpx;
}

.userinfo-type .right::before {
  /* display: block; */
  content: "\e6a3";
  font-family: 'cuIcon';
  flex: 1;
  font-size: 32rpx;
  margin-right: -8rpx;
}

.little_card {
  margin-bottom: 40rpx;
  height: 212rpx;
  width: 100%;
  /* background-color: blue; */
}

.little_card:last-child {
  margin-bottom: 0;
}

.btn {
  bottom: 0;
  height: 89rpx;
  /* background-color: red; */
  display: flex;
  border-top: 1px solid #CCCCCC;
}

.btn view {
  flex: 1;
  text-align: center;
  line-height: 89rpx;
  font-size: 32rpx;
  color: #000000;
}

.btn .confirm {
  color: #2655CF;
  border-left: 1px solid #CCCCCC;
}

.head {
  display: flex;
  align-items: center;
  width: 100%;
  position: relative;
  padding-bottom: 12rpx;
  border-bottom: 1px dashed #FFAAB5D1;
  height: 40rpx;
}

.stu_name {
  font-size: 28rpx;
  margin-right: 20rpx;
}

.stu_time {
  font-size: 22rpx;
  color: #666666;
}

.judge_type {
  font-size: 26rpx;
  justify-self: flex;
  position: absolute;
  right: 0;
}

.content {
  margin-top: 26rpx;
  font-size: 24rpx;
  height: 24rpx;
}

.content .content_title {
  color: #888888;
}

.content .content_content {
  color: #333333;
}

.content_judge {
  display: flex;
  height: 50rpx;
  align-items: center;
  font-size: 24rpx;
}

.content_judge .content_title {
  color: #888888;
}

.content_judge .do {
  height: 50rpx;
  width: 110rpx;
  border-radius: 25rpx;
  background: linear-gradient(-90deg, #5BBAF7, #2655CF);
  font-size: 26rpx;
  color: #FFFFFF;
  line-height: 50rpx;
  margin: 0;
}

.content_judge .none {
  height: 50rpx;
  width: 110rpx;
  border-radius: 25rpx;
  background-color: #AAAAAA;
  font-size: 26rpx;
  color: #FFFFFF;
  line-height: 50rpx;
  margin: 0;
}

