}

.for_authen {
  height: 105rpx;
  width: 111.5rpx;
  position: absolute;
  /* background-color: blue; */
  top: -12rpx;
  right: 17rpx;
  z-index: 2;
}

.auth_circle {
  height: 100rpx;
  width: 100rpx;
  border: 5rpx solid #F14C4C;
  border-radius: 50%;
  margin-top: 2.5rpx;
  margin-left: 5.75rpx;
}

.auth_row {
  height: 40rpx;
  width: 120rpx;
  text-align: center;
  border: 2rpx solid #F14C4C;
  position: absolute;
  font-size: 23.63rpx;
  line-height: 40rpx;
  top: 50%;
  margin-top: -20rpx;
  left: -4.25rpx;
  transform: rotate(45deg);
  z-index: 3;
  background-color: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
}

.for_auth_no .no_authen {
  background-color: transparent;
  color: #F66060;
  border: 1px solid #F66060;
  border-radius: 8rpx;
}