
<view class="page me">
  <view class="userinfo">
    <view class="action">
      <button class="cu-btn block line-pink round" style="position:absolute;right:0;top:0;" bindtap="picture2" size="100%">扫一扫</button>
    </view>

    <view class="userinfo-avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <open-data type="userNickName"></open-data>
    <view class="padding-xl"  wx:if="{{isLogin == false}}">
      <view class="margin-tb-sm text-center">
        <button class="cu-btn block line-pink lg" bindtap="movetologin">未登录，点击登录</button>
      </view>
    </view>
    <view class="padding-xl"  wx:else>
      <view class="margin-tb-sm text-center">
        <button class="cu-btn block line-pink lg" bindtap="isout" >已登录，点击退出</button>
      </view>
      <view class="margin-tb-sm text-center">
        <button class="cu-btn block line-pink lg" bindtap="choose" >选择身份</button>
      </view>
    </view>
  </view>
  <view class="others"></view>
</view>