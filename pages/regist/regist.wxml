<i-panel title="用户注册">

<view class="cu-form-group margin-top">
	<view class="text-red">*</view>
  <view class="title">用户名</view>
	<input placeholder="请输入用户名" type="text" maxlength="30" bindblur="findaccount" bindinput="useraccount"></input>
</view>
<view wx:if="{{flagaccount}}">用户名已被使用</view>

<view class="cu-form-group">
	<view class="text-red">*</view>
	<view class="title">密码</view>
	<input placeholder="请输入密码（6~12位）" type="password" maxlength="12" bindinput="userpassword"></input>
</view>

<view class="cu-form-group">
	<view class="text-red">*</view>
	<view class="title">确认密码</view>
	<input placeholder="请再次输入密码" type="password" maxlength="12" bindinput="againpassword" bindfocus="checkpassword"></input>
</view>

<view class="cu-form-group">
	<view class="text-red">*</view>
	<view class="title">手机号码</view>
	<input placeholder="请输入手机号" type="number" maxlength="11" bindblur="findphone" bindinput="userphone"></input>
	<view class="cu-capsule radius">
		<view class="cu-tag bg-blue">
			+86
		</view>
		<view class="cu-tag line-blue">
			中国大陆
		</view>
	</view>
</view>
<view wx:if="{{flagphone}}">
手机号已被使用
</view>
<view class="cu-form-group">
	<view class="text-red">*</view>
	<view class="title">验证码</view>
	<input placeholder="请输入验证码" maxlength="6" type="number" bindinput="inputcode"></input>
	<button class="cu-btn bg-green shadow" bindtap="getcode">获取验证码</button>
</view>

<i-button bindtap="regist" type="success" shape="circle">一键注册</i-button>

</i-panel>