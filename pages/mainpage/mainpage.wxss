
.card {
  border: 2px solid #ffffff;
  border-radius: 5px;
  background-color: #ffffff;
  box-shadow: 4px 1px 1px #cccccc;
  margin: 8px;
  position: relative;
}

.image {
  width: 100%;
  height: 200px;
  background-color: #eeeeee;
}

.time {
  float: right;
  margin-top: 170px;
  color: #ffffff;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  font-size: 12px;
}
.name {
  display: inline-block;
}

.name .cu-btn bg-green round{
  position: absolute;
  right: 0;
}
.imageBanner {
  width: 100%;
  height: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
 
 
.imageBanner_small {
  width: 94%;
  height: 90%;
  margin-left: 20rpx;
  margin-right: 20rpx;
  position: absolute;
  bottom: 0;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx; 
}

/* 轮播图 */
 
.detail-banner {
  width: 100%;
  height: 700rpx;
  padding: 0 0 40rpx 0;
}
 

/* video */
 
.box-w {
  width: 100%;
  height: 700rpx;
}
 
.ico-share {
  width: 18px;
  height: 18px;
  display: block;
}