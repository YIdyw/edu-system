/* component/navigator/navigator.wxss */

.navigator{
  position: fixed;
  top: 0;
  left: 0;
  background: #2655CF;
  width: 100%;
  /* height: 128rpx; */
  padding-top: 7rpx;
  opacity: 1;
  background-color: #2655CF;
  z-index: 2;
}
.navigator1{
  width: 727rpx;
  /* height: 23rpx; */
  margin-left: 15rpx;
  margin-bottom: 10rpx;
  background: #2655CF;
}
.navigator2{
  width: 220rpx;
  /* height: 88rpx; */
  background: #2655CF;
  padding: 10rpx 0 27rpx 30rpx;
  position: relative;
}

.navigator2::before {
  content: "\e679";
  font-family: 'cuIcon';
  display: block;
  /* height: 34rpx; */
  width: 30rpx;
  color: #FFFFFF;
  float: left; 
  margin-right: 20rpx;
  font-size: 34rpx;
  margin-top: -3rpx;
}

.navigator3{
  /* height: 34rpx; */
  line-height: 34rpx;
  float: left;
  font-size: 34rpx;
  font-family: Microsoft YaHei;
  font-weight: 300;
  color: #FFFFFF;
}

.card {
  border-radius: 20rpx;
  background-color: #ffffff;
  margin: 20rpx 30rpx 0 30rpx;
  padding: 30rpx;
  position: relative;
}

.card:last-child {
  margin-bottom: 30rpx;
}

/* .cards {
  margin-bottom: 30rpx;
} */

.image {
  width: 100%;
  height: 200px;
  background-color: #eeeeee;
}

.time {
  float: right;
  margin-top: 170px;
  color: #ffffff;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  font-size: 12px;
}
.name {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.name text{
  font-size: 30rpx;
  color: #333333;
}

.name .cu-btn{
  /* display: block; */
  height: 50rpx;
  font-size: 26rpx;
  width: 136rpx;
  border-radius: 25rpx;
  background-image: linear-gradient(-90deg, #5BBAF7, #2655CF);
  color: #FFFFFF;
}

.bannerSwiper {
  height: 180rpx;
  border-radius: 10rpx;
  overflow: hidden;
}


