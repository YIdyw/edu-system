picker {
  height: 90rpx;
}

/* pick-view */
.picker_box {
  flex: 1;
	padding-right: 40rpx;
	overflow: hidden;
  position: relative;
  height: 90rpx;
}

.picker_box .picker {
  line-height: 90rpx;
	font-size: 28rpx;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
	width: 100%;
	text-align: right;
}

.picker_box::after {
  font-family: "cuIcon";
	display: block;
	content: "\e6a3";
	position: absolute;
	font-size: 34rpx;
	color: var(--grey);
	line-height: 90rpx;
	width: 60rpx;
	text-align: center;
	top: 0;
	bottom: 0;
	right: -20rpx;
	margin: auto;
}

