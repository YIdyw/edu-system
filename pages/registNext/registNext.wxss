picker-view {
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #FFF;
  text-align: center;
  box-sizing: border-box;
  width: 100%;
  height: 0;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  z-index: 3 ;
  padding-bottom: 5px;
}

/* // 添加弹出的过渡动画 */
picker-view.show {
  /* height: 62%;
  transition: all 3s; */
  animation: showbox .3s linear .1s 1 forwards;
}

@keyframes showbox {
  0% {
    height: 0;
  }
  100% {
    height: 62%;
  }
}

/* // 设置单列数据的样式 */
picker-view-column {
  border-top-right-radius: 100rpx;
  border-top-left-radius: 100rpx;
  color: #B8B8B8;
  font-size: 25px;
  height: 100%;
