/* // 自定义选中的时候字体颜色和大小 */
.pick-text {
  color: #333333;
  font-size: 25px;
}

.banner {
  position: fixed;
  width: 100%;
  background: rgba(0, 0, 0, 0.3);
  top: 0;
  height: 100%;
  z-index: 2;
}

.btns {
  position: absolute;
  bottom: 0;
  z-index: 3;
  width: 100%;
  padding: 0 40px;
  animation: move_btn .1s ease 0s 1 forwards;
}

@keyframes move_btn {
  0% {
    height: 0;
  }
  100% {
    height: 90px;
  }
}


