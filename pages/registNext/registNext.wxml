<!--pages/registNext/registNext.wxml-->
<!-- 导航栏 -->
<i-navigator></i-navigator>

<view class="{{isboxshow ? 'banner' : ''}}" bindtap="change_show"></view>
<view class="content">
	<view class="cu-form-group">
		<view class="title">昵称</view>
		<input placeholder="请输入昵称" type="text" maxlength="30" bindinput="username"></input>
	</view>

	<view class="cu-form-group">
		<view class="title">邮箱</view>
		<input placeholder="请输入邮箱" type="text" maxlength="30" bindinput="useremail"></input>
	</view>


	<view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">出生年月日</view>
		<picker mode="date" start="1900-01-01" end="{{today}}" bindchange="userbirth">
			<view class="picker">{{birth}}</view>
		</picker>
	</view>

	<view class="cu-form-group">
		<view class="title">性别</view>
		<radio-group class="cu-form-group" bindchange="handleSexChange" data-gender="{{gender}}">
			<view wx:for="{{sex}}" wx:key="id">
				<radio class="margin-left-xl" checked="{{item.checked}}" style="margin-right:5px" id="{{index}}"></radio>
				<label for="{{index}}" style="line-height:90rpx; font-size:26rpx ">{{item.name}}</label>
			</view>
		</radio-group>
	</view>

	<view class="cu-form-group margin-bottom">
		<view class="text-red">*</view>
		<view class="title">请选择默认角色</view>
	<!-- <picker bindchange="PickerRole" value="{{indexRole}}" range="{{pickerRole}}">
		<view class="picker">{{pickerRole[indexRole]}}</view>
	</picker> -->
		<!-- <picker-view bindchange="PickerRole" indicator-style="height:50px" style="width: 100%; height: 300px;" value="{{pickerRole}}">
	  <view class="picker">{{pickerRole[indexRole]}}</view>
    <picker-view-column>
      <view wx:for="{{pickerRole}}" wx:key="index" style="line-height: 50rpx">{{item}}</view>
    </picker-view-column>
  </picker-view> -->
		
		<view class="picker_box" bindtap="openbox">
			<view class="picker">{{pickerRole[indexRole]}}</view>
		</view>

	</view>
</view>

<view wx:if="{{indexRole==2}}" class="stu_form">
	<form>
		<view class="cu-form-group margin-top">
			<view class="text-red">*</view>
			<view class="title">姓名</view>
			<input placeholder="请填写真实姓名" maxlength="30" bindinput="nameStu"></input>
		</view>
		<view class="cu-form-group">
			<view class="text-red">*</view>
			<view class="title">年级</view>
			<picker bindchange="PickerGrade" value="{{indexGrade}}" range="{{pickerGrade}}">
				<view class="picker">
					{{pickerGrade[indexGrade]}}
				</view>
			</picker>
		</view>
		<view class="cu-form-group">
			<view class="text-red">*</view>
			<view class="title">学校</view>
			<input placeholder="请填写学校全名" maxlength="30" bindinput="school"></input>
		</view>
		<view class="cu-form-group">
			<view class="text-red">*</view>
			<view class="title">联系人电话</view>
			<input placeholder="请填写联系人电话" maxlength="11" type="number" bindinput="secondTel"></input>
		</view>
		<view class="cu-form-group">
			<view class="title">QQ</view>
			<input placeholder="请填写QQ号" type="number" maxlength="11" bindinput="qqinput"></input>
		</view>
		<view class="cu-form-group">
			<view class="title">微信</view>
			<input placeholder="请填写微信号" maxlength="50" bindinput="weixin"></input>
		</view>

	</form>
</view>
<view wx:elif="{{indexRole==1}}" class="tch_form">
	<form>
		<view class="cu-form-group">
			<view class="text-red">*</view>
			<view class="title">身份证</view>
			<input placeholder="请输入身份证号" maxlength="18" bindinput="cardid"></input>
		</view>

		<view class="cu-form-group">
			<view class="text-red">*</view>
			<view class="title">姓名</view>
			<input placeholder="请输入真实姓名" maxlength="20" bindinput="truename"></input>
		</view>

		<view class="cu-form-group">
			<view class="title">QQ</view>
			<input placeholder="请输入QQ号" type="number" maxlength="11" bindinput="Tqqinput"></input>
		</view>

		<view class="cu-form-group">
			<view class="title">微信</view>
			<input placeholder="请输入微信号" maxlength="50" bindinput="Tweixin"></input>
		</view>

		<view class="cu-form-group">
			<view class="title">选择您的所在地</view>
			<picker mode="region" bindchange="RegionChange" value="{{region}}">
				<view class="picker">{{region[0]}}，{{region[1]}}，{{region[2]}}</view>
			</picker>
		</view>

			</form>

<form>
		<view class="cu-bar bg-white margin-top area-top">
			<view class="text-red">*</view>
			<view class="action">请上传身份证照片</view>
			<view class="area-img">{{imgUrl.length}}/1</view>
		</view>

	<!-- <view class="line"></view> -->
	<view class="cu-form-group area" style="padding-top:10px">
			<view class="grid col-4 grid-square flex-sub" >
				<view class="bg-img" wx:if="{{imgUrl.length}}" wx:key='id' bindtap="ViewImage" data-url="{{imgUrl}}">
					<image src='{{imgUrl}}' mode='aspectFill'></image>
					<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
						<text class="cuIcon-close"></text>
					</view>
				</view>
				<view wx:else class="solids" bindtap="ChooseImage" style="margin-left:39%">
					<text class="cuIcon-cameraadd"></text>
				</view>
			</view>
		</view>

	</form>
</view>

<!-- <view class="padding flex flex-direction">
		<button class="cu-btn bg-olive shadow" bindtap="checkin">点击登记</button>
	</view> -->

<view class="for_height">
	<i-button bindtap="checkin" type="success" shape="circle">点击登记</i-button>
</view>


<picker-view wx:if="{{isboxshow}}" indicator-style="height:80px;" bindchange="change_box" class="{{ isboxshow ? 'show' : '' }}" bindcancel="true" >
			<view class='btns'>
				<!-- <view bindtap="closePicker">取消</view>  -->
				<button class="box_cancel" bindtap="closePicker" shape="circle">取消</button>
				<!-- <view bindtap="getValue">确认</view> -->
				 <button class="box_confirm" bindtap="getValue" shape="circle">确定</button>
			</view>
			<picker-view-column>
				<view wx:for="{{pickerRole}}" wx:key="index" style="line-height: 80px; text-align:center;" class="{{ cur_Role === index ? 'pick-text' : '' }}">{{item}}</view>
			</picker-view-column>
		</picker-view>