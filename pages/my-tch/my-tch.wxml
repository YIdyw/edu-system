

<view class="page me">
  <view class="userinfo">
    <view class="tch">
    <text>教师</text>
    </view>
    <view class="userinfo-avatar" bindtap="tobe">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <text>点击头像切换身份</text>
   <!-- <open-data type="userNickName"></open-data> -->

    <view class="padding-xl"  wx:if="{{islogin == false}}">
      <view class="margin-tb-sm text-center">
        <button class="cu-btn block line-pink lg" bindtap="movetologin">未登录，点击登录</button>
      </view>
    </view>

    <view class="padding-xl"  wx:else>
      <view class="margin-tb-sm text-center">
        <button class="cu-btn block line-pink lg" bindtap="isout" >已登录，点击退出</button>
      </view>
    </view>

  </view> 
</view>

<view class="cu-list grid col-3 no-border">
  <view class="cu-item" wx:for="{{iconList}}" wx:key="id" bindtap="facehandler" data-id="{{item.id}}">
    <view class="cuIcon-{{item.icon}} text-{{item.color}}">
      <view class="cu-tag badge" wx:if="{{index==3 && notifyNum}}">
        <block wx:if="{{notifyNum}}">{{notifyNum>99?"99+":notifyNum}}</block>
      </view>
  </view>
    <text>{{item.name}}</text>
  </view>
</view>

