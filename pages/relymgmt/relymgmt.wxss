.cu-form-group .content {
  position: absolute;
  left: 215rpx;
  color: #9D9D9D;
  font-size: 26rpx;
}

.cu-form-group .blue_line {
  width: 8rpx;
  height: 28rpx;
  position: absolute;
  top: 26rpx;
  left: 30rpx;
  background: linear-gradient(90deg, #5BBAF7, #2655CF);

}

.cu-form-group:first-child .title {
  left: 56rpx;
}

.cu-form-group:first-child .content {
  left: 367rpx;
}

.cu-form-group:nth-child(2) .title {
  left: 56rpx;
}

.cu-form-group:nth-child(2) .content {
  left: 310rpx;
}

.cu-form-group:nth-child(4) .title {
  left: 56rpx;
}

.cu-steps .cu-item {
  font-size: 22rpx;
  min-width: 105rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  box-sizing: border-box;
}

.cu-steps .cu-item [class*="cuIcon-"] {
  font-size: 40rpx;
  line-height: 40rpx;
  margin-bottom: 13rpx;
}

.rely_content {
  margin-bottom: 30rpx;
}


