/* pages/relymgmt/relymgmt.wxss */
.search {
  height: 72rpx;
  width: 690rpx;
  margin: 30rpx auto 0;
  padding: 0 30rpx;
  border-radius: 36rpx;
  border: 1px solid #2655CF;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
}

.search .search_icon {
  width: 28rpx;
  height: 72rpx;
  line-height: 72rpx;
  margin-right: 19rpx;
  /* background-color: red; */
}

.search .search_icon::after {
  content: "\e65c";
  font-family: 'cuIcon';
  font-size: 29rpx;
}

.search .search_input {
  flex: 1;
}

.search .search_title {
  width: 62rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 30rpx;
  color: #2655CF;
}

.choose_org {
  margin-top: 30rpx;
  height: 80rpx;
}

.cu-form-group picker {
  padding-right: 30rpx;
  position: relative;
}

.cu-form-group picker::after {
  color: #C1C1C1;
}

.cu-form-group picker .picker {
  line-height: 80rpx;
  padding-right: 27rpx;
}

.cu-form-group .title {
  position: absolute;
  top: 23rpx;
  left: 30rpx;
}

.cu-form-group picker::after {
  float: right;
  margin-right: 30rpx;
  margin-top: -8rpx;
  font-size: 26rpx;
}

.had_choose .choose_btn {
  background-color: #2655CF;
  color: #FFFFFF;
}

.choose_ad {
  text-align: center;
  margin: 28rpx auto 0;
  font-size: 28rpx;
  color: #F66060;
}

.cu-form-group {
  padding: 0 30rpx;
}

.cu-form-group .text-red {
  /* display: flex; */
  height: 10rpx;
  width: 11rpx;
  font-size: 26rpx;
  position: absolute;
  line-height: 95rpx;
  top: 0;
  left: 30rpx;
}

