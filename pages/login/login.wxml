<i-panel title="用户登录">
    <view class="cu-form-group margin-top">
		<view class="title">账号</view>
		<input placeholder="请输入账号" type="text" bindinput="accountinput"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">密码</view>
		<input placeholder="请输入密码" type="password" bindinput="passwordinput"></input>
	</view>
	<view class="find" bindtap="findpsword">找回密码</view>
	<i-button bind:click="login" type="success" shape="circle">登录</i-button>
  <i-button bind:click="regist" type="success" shape="circle">注册</i-button>

</i-panel>