<!-- 导航栏 -->
<i-navigator></i-navigator>


<view wx:if="{{courseInfo.length==0}}" >
  <view class="content" >
    <view style="margin-top:100px;width:100%;">
      <view style='text-align:center;'>课程未安排具体上课时间!</view>
    </view>
  </view>
</view>
<view  class="cu-list menu margin" wx:for="{{courseInfo}}" wx:key="id" >
  <view  class="cu-item">
    <view class="content">
      <view class="cu-bar">
        <view class="action">
          <text class="cuIcon-title text-olive"></text>
          <view>{{item.courseTime}}</view>
        </view>
      </view>
      <view class="cu-bar">
        <view class="action">
          <view>当前课时/总课时：{{item.currentCount}}/{{item.totalCount}}</view>
        </view>
         <view class="action">
          <view>总人数：{{item.totalStudent}}</view>
        </view>
      </view>
      <view class="cu-bar">
        <view class="action">
          <view>签到人数：{{item.signedStudent}}</view>
        </view>
        <view class="action">
          <view>未签到人数：{{item.unsignedStudent}}</view>
        </view>
      </view>
      <view class="cu-bar flex justify-end">
        <view class="action">
          <button class="bg-olive margin-bottom text-sm" bindtap="signList" data-time="{{item.courseTime}}">点击查看本次课程具体签到名单</button>
        </view>
      </view>
    </view>
  </view>
</view>
