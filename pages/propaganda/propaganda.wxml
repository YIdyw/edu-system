<!--pages/propaganda/propaganda.wxml-->
<i-panel title="预约课程">

<view class="cu-form-group margin-top">
	<view class="text-red">*</view>
  <view class="title">课程类别</view>
	<input placeholder="请输入预约的课程类别" type="text" maxlength="20" bindinput="courseKind"></input>
</view>

<view class="cu-form-group">
	<view class="title">姓名</view>
	<input placeholder="请输入您的姓名" type="text" maxlength="20" bindinput="name"></input>
</view>

<view class="cu-form-group">
	<view class="title">年龄</view>
	<input placeholder="请输入您的年龄" type="number" maxlength="2" bindinput="age"></input>
</view>

<view class="cu-form-group">
	<view class="text-red">*</view>
	<view class="title">手机号码</view>
	<input placeholder="请输入手机号" type="number" maxlength="11" bindblur="findphone" bindinput="userphone"></input>
	<view class="cu-capsule radius">
		<view class="cu-tag bg-blue">
			+86
		</view>
		<view class="cu-tag line-blue">
			中国大陆
		</view>
	</view>
</view>
<view wx:if="{{flagphone}}">
手机号已被使用
</view>
