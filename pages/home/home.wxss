.box {  
  margin: 20rpx 0; 
}

.box view.cu-bar {
  margin-top: 20rpx; 
}
.tower-swiper .tower-item {
  transform: scale(calc(0.5 + var(--index) / 10));
  margin-left: calc(var(--left) * 100rpx - 150rpx);
  z-index: var(--index);
}

.nav{font-size: 30rpx;text-align: center;width: 750rpx;margin-top: 30rpx;margin-right: 30rpx;height: 500rpx;}
.nav image{height: 300rpx;width: 200rpx;box-shadow: 3px 3px 4px #111;}
.nav text{width: 100%;height: 32rpx;margin-top: 10rpx;color: #111;line-height: 32rpx;display: block;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;}