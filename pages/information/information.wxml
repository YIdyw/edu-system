<form wx:if="{{!flag}}">
	<view class="cu-form-group margin-top">
		<view class="text-red">*</view>
		<view class="title">姓名:</view>
		<input placeholder="请填写真实姓名" maxlength="30" bindinput="name"></input>
	</view>
	<view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">年级：</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'请选择'}}
			</view>
		</picker>
	</view>
	<view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">学校:</view>
		<input placeholder="请填写学校全名" maxlength="30" bindinput="school"></input>
	</view>
  <view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">联系人电话:</view>
		<input placeholder="请填写联系人电话" maxlength="11" type="number" bindinput="type"></input>
	</view>
  <view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">QQ:</view>
		<input placeholder="请填写QQ号" type="number" maxlength="11" bindinput="qqinput"></input>
	</view>
  <view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">微信:</view>
		<input placeholder="请填写微信号" maxlength="50" bindinput="weixin"></input>
	</view>
  <view class="padding flex flex-direction">
  <button class="cu-btn bg-grey lg" bindtap="bindclick">点击登记</button>
</view>
<view wx:if="{{isupdatepsword}}" class="padding flex flex-direction">
  <button class="cu-btn bg-grey lg" bindtap="updatepassword">点击修改密码</button>
</view>
<view wx:else class="padding bg-grey">
    <view class="flex">
      <view class="title">旧密码：</view>
      <input placeholder="请输入旧密码" type="password" maxlength="12" bindinput="oldpsword"></input>
    </view>
    <view class="flex">
	    <view class="title">新密码：</view>
	    <input placeholder="新密码不超过12位" type="password" maxlength="12" bindinput="newpsword"></input>
    </view>
    <button bindtap="updatepsword" class="basis-xl cu-btn block line-pink lg">点击修改密码</button>
  </view>
  </form>
<form wx:else>
