<form wx:if="{{!flag}}">
	<view class="cu-form-group margin-top">
		<view class="title">姓名:</view>
		<input placeholder="请输入姓名" bindinput="name"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">年级：</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'请选择'}}
			</view>
		</picker>
	</view>
	<view class="cu-form-group">
		<view class="title">学校:</view>
		<input placeholder="请输入学校" bindinput="school"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">备用电话:</view>
		<input placeholder="请输入电话" type="number" bindinput="type"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">QQ:</view>
		<input placeholder="请输入QQ号" type="number" bindinput="qqinput"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">微信:</view>
		<input placeholder="请输入微信号" bindinput="weixin"></input>
	</view>
  <view class="padding flex flex-direction">
  <button class="cu-btn bg-grey lg" bindtap="bindclick">点击登记</button>
</view>
  </form>
<form wx:else>
	<view class="cu-form-group margin-top">
		<view class="title">姓名:</view>
		<input placeholder="{{getstuinfo.name}}" disabled></input>
	</view>
	<view class="cu-form-group">
		<view class="title">年级:</view>
		<input placeholder="{{grade}}" disabled></input>
	</view>
	<view class="cu-form-group">
		<view class="title">学校:</view>
		<input placeholder="{{getstuinfo.school}}" disabled></input>
	</view>
  <view class="cu-form-group">
		<view class="title">备用电话:</view>
		<input placeholder="{{getstuinfo.secondTel}}" disabled></input>
	</view>
  <view class="cu-form-group">
		<view class="title">QQ:</view>
		<input placeholder="{{getstuinfo.qq}}" disabled></input>
	</view>
  <view class="cu-form-group">
		<view class="title">微信:</view>
		<input placeholder="{{getstuinfo.weixin}}" disabled></input>
	</view>
  <view class="padding flex flex-direction">
  <button class="cu-btn bg-grey lg" >已登记过信息</button>
</view>
</form>