<form wx:if="{{!flag}}">
	<view class="cu-form-group margin-top">
		<view class="text-red">*</view>
		<view class="title">姓名:</view>
		<input placeholder="请填写真实姓名" bindinput="name"></input>
	</view>
	<view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">年级：</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'请选择'}}
			</view>
		</picker>
	</view>
	<view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">学校:</view>
		<input placeholder="请填写学校全名" bindinput="school"></input>
	</view>
  <view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">联系人电话:</view>
		<input placeholder="请填写联系人电话" type="number" bindinput="type"></input>
	</view>
  <view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">QQ:</view>
		<input placeholder="请填写QQ号" type="number" bindinput="qqinput"></input>
	</view>
  <view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">微信:</view>
		<input placeholder="请填写微信号" bindinput="weixin"></input>
	</view>
  <view class="padding flex flex-direction">
  <button class="cu-btn bg-grey lg" bindtap="bindclick">点击登记</button>
</view>
  </form>
<form wx:else>
	<view class="cu-form-group margin-top">
		<view class="text-red">*</view>
		<view class="title">姓名:</view>
		<input value="{{getstuinfo.name}}" bindinput="name"></input>
	</view>
	<view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">年级：</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'请选择'}}
			</view>
		</picker>
	</view>
	<view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">学校:</view>
		<input value="{{getstuinfo.school}}" bindinput="school"></input>
	</view>
  <view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">联系人电话:</view>
		<input value="{{getstuinfo.type}}" type="number" bindinput="type"></input>
	</view>
  <view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">QQ:</view>
		<input value="{{getstuinfo.qq}}" type="number" bindinput="qqinput"></input>
	</view>
  <view class="cu-form-group">
		<view class="text-red">*</view>
		<view class="title">微信:</view>
		<input value="{{getstuinfo.weixin}}" bindinput="weixin"></input>
	</view>
  <view class="padding flex flex-direction">
  <button class="cu-btn bg-grey lg" bindtap="bindclick">点击登记</button>
</view>
</form>