<!--pages/adver/adver.wxml-->
<view class="cu-bar bg-white solid-bottom margin-top">
  <view class="action">
    <text class="cuIcon-title text-blue"></text>营销推广页面
  </view>
</view>
<view  class="cu-bar bg-white solid-bottom margin-top" > 
  <view class="padding bg-white" flex-direction: column>
    <view class="text-left padding">机构名称：{{info.OrganizationName}}</view>
    <view class="text-left padding">营销人员：{{info.userName}}</view>
    <image wx:if="{{info.adverPhoto}}" mode="aspectFill" class="carts-image" src="{{info.adverPhoto}}"></image>
    <view wx:if="{{info.course}}" style="display:flex;justify-content:center;font-size:20px;">最近课程：</view>
    <view wx:for="{{info.course}}" wx:key="index">
      <view class="text-left padding">课程名称：{{item}}</view>
    </view>
    <view wx:if="{{codeurl}}" style="display:flex;justify-content:center;font-size:20px;">营销二维码</view>
    <image wx:if="{{codeurl}}" mode="aspectFill" style="width:{{imageWidth}}px;height:{{imageHeight}}px;" class="carts-image" bindload="imgload" src="{{codeurl}}"></image>
    <view wx:if="{{codeurl}}" style="display:flex;justify-content:center;font-size:20px;">扫码进行预约</view>
    <i-button type="success" open-type="share" shape="circle">分享至微信</i-button>
  </view>
</view>
