<!--pages/adver/adver.wxml-->
<view class="cu-bar bg-white solid-bottom margin-top">
  <view class="action">
    <text class="cuIcon-title text-blue"></text>营销推广页面
  </view>
</view>
<view  class="cu-bar bg-white solid-bottom margin-top" > 
  <view class="padding bg-white" flex-direction: column>
    <view class="text-left padding">机构名称：{{info.orgName}}</view>
    <view class="text-left padding">营销人员：{{info.teaname}}</view>
    <image mode="aspectFill" class="carts-image" src="http://139.129.101.91/offline-education-system/picture/{{info.adverPhoto}}"></image>
    <view style="display:flex;justify-content:center;font-size:20px;">最近课程：</view>
    <view wx:for="{{info.course}}" wx:key="index">
      <view class="text-left padding">课程名称：{{item.name}}</view>
    </view>
    <image mode="aspectFill" class="carts-image" src="http://139.129.101.91/offline-education-system/picture/{{info.code}}"></image>
    <view style="display:flex;justify-content:center;font-size:20px;">扫码进行预约</view>
    <i-button type="success" open-type="share" shape="circle">分享至微信</i-button>
  </view>
</view>
