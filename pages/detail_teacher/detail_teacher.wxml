<view style="min-height : {{screen.minHeight}}px; background-color: #2f2f2f;">
  <view class="banner" wx:if="{{flag}}">
    <view class="poster" >
      <image mode="aspectFit" src="https://www.sanshidiboundless.com/offline-education-system/picture/{{teacher.data.adverPhoto}}"></image>
    </view>
    <view class="info">
      <view class="title">{{name}}</view>
      
      <view class="subinfo">
        <view>毕业于: {{teacher.data.gradSchool}}</view>
