<view style="min-height : {{screen.minHeight}}px; background-color: #2f2f2f;">
  <view class="banner" wx:if="{{flag}}">
    <view class="poster" >
      <image mode="aspectFit" src="https://www.sanshidiboundless.com/offline-education-system/picture/{{teacher.data.adverPhoto}}"></image>
    </view>
    <view class="info">
      <view class="title">{{name}}</view>
      
      <view class="subinfo">
        <view>毕业于: {{teacher.data.gradSchool}}</view>
        <view>学位: {{teacher.data.degree}}</view>
      </view>
    </view>
    <image class="background" mode = "aspectFill" src="https://www.sanshidiboundless.com/offline-education-system/picture/{{teacher.data.adverPhoto}}"></image>
    
  </view>

  <view class="summary">
    {{teacher.data.briefIntro}}
  </view>
  
  <view class="casts">
    <view class="title" catchtap="rotateAnim">
    <text>该老师教授课程</text>
    <view style="transform:rotate({{degs}}deg);transition:all 0.4s;"></view>
    </view>
    <view hidden="{{degs==0}}">
    <block wx:for="{{teacher_course.course}}" wx:key="index">

    <view class="view_wenzi2" style="background-color:white"> 
      <text>{{item}}</text>
    </view>

  
</block>
</view>
  </view>
</view>