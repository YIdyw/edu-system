      </view>
    </view>
    <image class="background" mode = "aspectFill" src="https://www.sanshidiboundless.com/offline-education-system/picture/{{teacher.data.adverPhoto}}"></image>
    
  </view>

  <view class="summary">
    {{teacher.data.briefIntro}}
  </view>
  
